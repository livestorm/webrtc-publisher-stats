{
  "name": "WebRTC stats viewer",
  "description": "Display WebRTC stats for ongoing A/V streams",
  "author": "Philippe Sultan",
  "version": "1.0.0",
  "manifest_version": 3,
  "minimum_chrome_version": "88",
  "content_scripts": [
    {
      "js": [
        "injectedScript.js"
      ],
      "css": [
        "style.css"
      ],
      "run_at": "document_start",
      "matches": [
        "https://*/*",
        "http://localhost:*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "pageHook.js"
      ],
      "matches": [
        "https://*/*",
        "http://localhost:*/*"
      ]
    }
  ]
}
